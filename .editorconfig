# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Set default charset
[*.md]
charset = utf-8

[*.{vhd,v,sv}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.{c,h}]
indent_style = space
indent_size = 2

[*.s]
indent_style = tab
indent_size = 8
